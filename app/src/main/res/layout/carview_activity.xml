<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_container_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="远车航向角"
            android:textColor="@color/color_blue"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:contentDescription="@string/compass_dial"
                android:src="@drawable/dial" />

            <ImageView
                android:id="@+id/iv_hand_rv"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/compass_hands"
                android:scaleType="fitXY"
                android:src="@drawable/hands" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="本车航向角"
            android:textColor="@color/color_blue"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:contentDescription="@string/compass_dial"
                android:src="@drawable/dial" />

            <ImageView
                android:id="@+id/iv_hand_hv"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/compass_hands"
                android:scaleType="fitXY"
                android:src="@drawable/hands" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/yellow"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/yellow"
            android:textSize="18sp" />

        <wangfeixixi.share.circle.DialProgress
            android:id="@+id/dial_progress_rv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:padding="@dimen/small"
            app:animTime="1000"
            app:arcColors="@array/gradient_arc_color"
            app:arcWidth="@dimen/small"
            app:dialIntervalDegree="3"
            app:dialWidth="1dp"
            app:hint="远车"
            app:hintSize="10sp"
            app:maxValue="300"
            app:startAngle="135"
            app:sweepAngle="270"
            app:unit="km/h"
            app:unitSize="12sp"
            app:value="0"
            app:valueSize="18sp" />

        <wangfeixixi.share.circle.DialProgress
            android:id="@+id/dial_progress_hv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:padding="@dimen/small"
            app:animTime="1000"
            app:arcColors="@array/gradient_arc_color"
            app:arcWidth="@dimen/small"
            app:dialIntervalDegree="3"
            app:dialWidth="1dp"
            app:hint="本车"
            app:hintSize="10sp"
            app:maxValue="300"
            app:startAngle="135"
            app:sweepAngle="270"
            app:unit="km/h"
            app:unitSize="12sp"
            app:value="0"
            app:valueSize="18sp" />

        <wangfeixixi.cip.widget.carview.CarView
            android:id="@+id/carview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <!--<TextView-->
        <!--android:id="@+id/tv_sp"-->
