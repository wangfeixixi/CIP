<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="mainViewModel"
            type="wangfeixixi.cip.ui.mvvm.MainViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:binding="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/fl_map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{mainViewModel.containerVisibility}">

            <wangfeixixi.cip.widget.carview.CarView
                android:id="@+id/carview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                binding:carviewview="@{mainViewModel.carBeas}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@{mainViewModel.warningText}"
                android:textColor="@color/yellow"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
</layout>